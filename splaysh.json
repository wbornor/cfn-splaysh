{
	"Resources": {
		"tableSplayshItem": {
			"Type": "AWS::DynamoDB::Table",
			"Properties": {
				"TableName": {
					"Fn::Join": [
						".", [
							"splayshdb",
							"items"
						]
					]
				},
				"AttributeDefinitions": [{
					"AttributeName": "nut_id",
					"AttributeType": "S"
				}, {
					"AttributeName": "id",
					"AttributeType": "S"
				}],
				"KeySchema": [{
					"AttributeName": "nut_id",
					"KeyType": "HASH"
				}, {
					"AttributeName": "id",
					"KeyType": "RANGE"
				}],
				"ProvisionedThroughput": {
					"ReadCapacityUnits": "1",
					"WriteCapacityUnits": "1"
				}
			}
		}
	}
}
